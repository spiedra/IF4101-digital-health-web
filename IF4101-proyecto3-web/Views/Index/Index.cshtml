@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<form class="container rounded form__login">
    <div class="container">
        <h1 class="mt-3 text-center">Log in</h1>
    </div>
    <div class="container mt-2">
        <label class="mb-2">User name</label>
        <input id="userName" class="form-control" type="text" name="userName" placeholder="Enter user name" required>
    </div>
    <div class="container mt-2">
        <label class="mb-2">Password</label>
        <input id="password" type="password" class="form-control" name="password" placeholder="Password" required>
    </div>
    <div class="container d-flex justify-content-center my-3">
        <button type="submit" class="btn btn-primary" asp-controller="Index" asp-action="MainAdmin">Log in</button>
    </div>
</form>