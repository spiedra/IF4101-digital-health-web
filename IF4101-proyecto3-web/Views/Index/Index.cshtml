@model DoctorViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<form class="container rounded form__login needs-validation" method="post" asp-controller="Index" asp-action="LogIn" novalidate>
    <div class="container">
        <h1 class="mt-3 text-center">Log in</h1>
    </div>
    <div class="container mt-2">
        <label class="mb-2">ID card</label>
        <input id="inIdCard" class="form-control" placeholder="Enter your ID card" asp-for="IdCard">
        <span class="field-validation-error" asp-validation-for="IdCard"></span>
    </div>
    <div class="container mt-2">
        <label class="mb-2">Doctor code</label>
        <input id="inDoctorCode" class="form-control" placeholder="Enter your doctor code" asp-for="DoctorCode">
        <span class="field-validation-error" asp-validation-for="DoctorCode"></span>
    </div>
    <div class="container mt-2">
        <label class="mb-2">Password</label>
        <input id="inPassword" type="password" class="form-control" placeholder="Enter your password" asp-for="Password">
        <span class="field-validation-error" asp-validation-for="Password"></span>
    </div>
    <div class="container d-flex justify-content-center my-3">
        <button id="btnLogIn" type="submit" class="btn btn-dark">Log in</button>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $(document).ready(function () {
        if ('@ViewBag.ShowModalResponse' === 'True') {
           createModalResponse("User not found");
        }
       });
    </script>
}