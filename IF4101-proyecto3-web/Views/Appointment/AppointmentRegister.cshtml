@model AppointmentViewModel
@{
    ViewData["Title"] = "Schedule appointment";
}

<form class="container mt-5 mb-4 py-3 bg-light form__register needs-validation" method="POST" novalidate>
    <div class="form-group">
        <h1 class="mt-3 text-center">Schedule Appointment</h1>
    </div>
    <div class="form-group">
        <label class="mb-2">ID card</label>
        <input class="form-control" placeholder="Enter your ID card" asp-for="PatientId">
        <span class="field-validation-error" asp-validation-for="PatientId"></span>
    </div>
    <div class="form-group">
        <label class="mb-2">Health center</label>
        <input class="form-control" placeholder="Enter the health center" asp-for="HealthCenter">
        <span class="field-validation-error" asp-validation-for="HealthCenter"></span>
    </div>
    <div class="form-group">
        <label class="mb-2">Appointment date</label>
        <input class="form-control" asp-for="Date">
        <span class="field-validation-error" asp-validation-for="Date"></span>
    </div>
    <div class="form-group">
        <label class="mr-3 mt-3">Speciality type</label>
        <select class="form-select">
            <option selected>Open this select menu</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
        </select>
        <span class="field-validation-error" asp-validation-for="SpecialityType"></span>
    </div>
    <div class="container d-flex justify-content-center my-3">
        <button id="" type="submit" class="btn btn-primary">Log in</button>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}